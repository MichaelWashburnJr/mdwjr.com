<div id="blog_list" class="container">
  <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">

      {{#posts}}

          <div class="panel panel-default">
            <a href="{{url}}" class="list-group-item">
              <div class="panel-heading">
                <h2>{{context.title}}</h2>
                <h4>{{context.date}}</h4>
              </div>
              <hr/>
              <p>
                {{context.description}}
              </p>
            </a>
          </div>

      {{/posts}}

  </div>
</div>
